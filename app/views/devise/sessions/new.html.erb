<div class="small-container center-block">

<h2 class="title-sign-in">Iniciar sesíon</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "Correo Electrónico" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "Contraseña" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="remember-me">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me,"Recordar sesión" %>
    </div>
  <% end %>

  <div class="actions btn-sign-in">
    <%= f.submit "Iniciar sesíon" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
